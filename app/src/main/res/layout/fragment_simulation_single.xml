<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.android.mobgage.fragments.SimulationSingleFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <TextView
            style="@style/style_black_text_medium_normal"
            android:id="@+id/simulation_single_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/style_black_text_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simulation_single_effective_interest"
                android:layout_marginRight="30dp"
                />

            <TextView
                style="@style/style_black_text_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simulation_single_mortgage_left"
                android:layout_marginRight="30dp"
                />

            <TextView
                style="@style/style_black_text_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simulation_single_monthly_return"
                />

            <TextView
                style="@style/style_black_text_medium_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simulation_single_date"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/simulation_single_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </LinearLayout>
</FrameLayout>
